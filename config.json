{
  "express": {
    "port": "8080"
  },
  "static": [
    { "mountPath": "/admin",    "localPath": "/webapp" },
    { "mountPath": "/",         "localPath": "/public"}
  ],
  "uploads": [
    { "mountPath": "/uploads",  "localPath": "/uploads"}
  ],
  "proxy": [
    { "mountPath": "/admin/resources", "url": "https://openui5.hana.ondemand.com/resources" }
  ],
  "nedb": {
    "mountPath": "/db",
    "dataPath": ".nedb",
    "databases": ["pages","page_types"],
    "index": {
      "pages": [
        { "fieldName": "parentId"}
      ]
    }
  },
  "engine": {
    "module": "express-handlebars",
    "mountPath": "/",
    "config": {
      "extname":".mst",
      "viewDir":"template/",
      "layoutsDir":"template/layouts/",
      "partialsDir":"template/partials/",
      "defaultLayout":"main"
    }
  }
}
