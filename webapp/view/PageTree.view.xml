<mvc:View
	controllerName="cmjs.controller.PageTree"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<content>
			<Tree
				busy="{view>/busy}"
				mode="SingleSelectMaster"				
				items="{path: 'view>/tree'}" 
				selectionChange=".onSelectionChange">
				<StandardTreeItem 
					title="{view>title}" selected="{= ${view>_id} === ${view>/selectedId} }" />
			</Tree>
		</content>
	</Page>
</mvc:View>